---
import BaseHead from '../components/BaseHead.astro';
import Header from "../components/Header.astro"
import Navbar from "../components/Navbar.svelte"
import About from "../components/About.astro"
import Portfolio from "../components/Portfolio.astro"
import Contact from "../components/Contact.astro"
import Blog from "../components/Blog.astro"
import Footer from "../components/Footer.astro"
import {Language} from "../types"
let title = 'Tom치코 Kebrle - Student, programmer & web-developer';
let description = 'Hello 游녦, I am a programmer, web-developer and web-designer from Czech republic.';
let permalink = 'https://tomaskebrle.cz';



const language:Language = {
  nav : {
    about: "About me",
    contact : "Contact",
    portfolio : "Portfolio",
    blog : "Blog"
  },
  header: {
    name: "Tom치코 Kebrle",
    tagline: "Student, programmer & web-developer"
  },
  about: {
    title: "About me",
    text : "Hello 游녦, I am a 17 year old programmer, web-developer and web-designer from Czech republic. I study there on an all-around Grammar School, but all my programming knowledge is entirely self taught. I mostly work with web-technologies, but I am also learning how to do backend, and I am quite intersted in Linux and DevOps. I am also <a href=\"assets/dofe.pdf\" class=\"text-[#666] hover:underline\">DofE bronze award holder</a>, where my main goal was to improve my programming skills.",
  },
  portfolio: {
    card1: {
      title : "Maturita Book",
      description: "Maturita book is an web-application with a list of book that need to be read for gradutation at my school. I got the data from Google books API. The app is written in NextJS and uses Firebase with Firestore.",
      link: "https://maturita-book.vercel.app",
      image: "/assets/maturita_book.jpg",
      shortlink: "maturita-book.vercel.app"
    },
    card2: {
      title : "My personal website",
      description : "SEO-Friendly, personal website with a blog and ways to contact me. I created the website to learn Astro. For styling I used TailwindCSS. And the blog is just markdown files.",
      link: "https://tomaskebrle.cz",
      image: "/assets/personal_website.jpg",
      shortlink: "tomaskebrle.cz"
    },
  },
  contact: "Do you need a web-site, or web-app? Turn your idea into reality? Do not hesitate and contact me!"
}

---

<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />
    <script src="https://kit.fontawesome.com/0611ddbb9f.js" crossorigin="anonymous"></script>
  </head>

	<body>
  <style>
      main{
        background-image: linear-gradient(0deg, #031927 35%, rgba(3, 25, 39, 0.85) 100%), url("/assets/bg.webp");
        background-position: center;
        background-size: cover;
      }
    </style>
    <main class="w-full px-4 lg:px-[16.666667%]">
      <Navbar language={language}/>
      <Header tagline={language.header.tagline}/>
      <About text={language.about.text} title={language.about.title}/>
      <Portfolio portfolio={language.portfolio}/>
      <Contact contact={language.contact} nav={language.nav} ></Contact>
      <Blog/>
    </main>
    <Footer></Footer>
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 500,
      });
    </script>
	</body>
</html>
